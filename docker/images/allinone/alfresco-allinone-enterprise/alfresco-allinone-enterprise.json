{
    "builders": [
        {
            "type": "docker",
            "image": "maoo/alfresco-repo-base:latest",
            "export_path": "alfresco-allinone-enterprise.tar"
        }
    ],
    "provisioners": [
      {
        "cookbook_paths": [
          "../../../../common/vendor-cookbooks"
        ],
        "data_bags_path": "../../../../common/data_bags",
        "json": {
          "alfresco": {
            "version"           : "4.2.3",
            "components"        : ["tomcat","transform","repo","share","solr"],
            "properties" : {
              "db.host"               :"db.mysql.demo.acme.com",
              "dir.license.external"  : "/alflicense",
              "solr.host"             : "localhost"
            },
            "solrproperties": {
              "alfresco.host" : "localhost"
            }
          },
          "tomcat" : {
            "base_version": 7
          }
        },
        "run_list": [
          "alfresco::default"
        ],
        "prevent_sudo": false,
        "skip_install": false,
        "type": "chef-solo"
      }
    ]
}
