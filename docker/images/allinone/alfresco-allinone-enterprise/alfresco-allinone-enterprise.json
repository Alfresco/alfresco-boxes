{
    "builders": [
        {
            "type": "docker",
            "image": "maoo/alfresco-repo-base:latest",
            "export_path": "alfresco-allinone-enterprise.tar"
        }
    ],
    "provisioners": [
        {
            "cookbook_paths": [
                "../../../../common/vendor-cookbooks"
            ],
            "data_bags_path": "../../../../common/data_bags",
            "json": {
                "alfresco": {
                    "default_hostname"  : "lb.apache-lb.demo.acme.com",
                    "default_port"      : "80",
                    "start_service"     : false,
                    "allinone"          : true,
                    "version"           : "4.2.2",
                    "properties": {
                        "db.host":"db.mysql.demo.acme.com",
                        "dir.license.external"  : "/alflicense",
                        "solr.host"             : "localhost"
                    },
                    "solrproperties": {
                      "alfresco.host" : "localhost"
                    }
                },
                "tomcat" : {
                    "base_version": 7
                }
            },
            "run_list": [
                "alfresco::repo_config",
                "alfresco::share_config",
                "alfresco::solr_config",
                "artifact-deployer::default",
                "alfresco::apply_amps"
            ],
            "prevent_sudo": false,
            "skip_install": false,
            "type": "chef-solo"
        }
    ]
}
