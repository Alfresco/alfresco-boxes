{
    "provisioners": [
        {
            "json": {
                "alfresco": {
                    "properties" : {
                        "dir.root": "/alfresco/alf_data_shared",
                        "index.subsystem.name": "solr",
                        "solr.secureComms": "none",
                        "share.host": "10.0.0.31"
                    },
                    "solrproperties" : {
                        "alfresco.secureComms": "none",
                        "host":"10.0.0.41"
                    },
                    "db": {
                        "host": "10.0.0.11"
                    }
                },

                "artifacts": {
                    "alfresco": {
                        "enabled": true,
                        "artifactId": "alfresco-nossl",
                        "groupId": "it.session.alfresco",
                        "version": "4.2.f"
                    },
                    "mysqlconnector": {
                        "enabled": true
                    }
                },
                "hostname": "alfresco-repo",
                "ip": "10.0.0.21",
                "memory":2048,
                "java": {
                    "default": true,
                    "install_flavor": "oracle",
                    "jdk_version": "7",
                    "oracle": {
                        "accept_oracle_download_terms": true
                    }
                },
                "tomcat": {
                    "base_version": 7,
                    "shared": "/var/lib/tomcat7/shared",
                    "group": "tomcat7",
                    "java_options": "-Xmx1500M -XX:MaxPermSize=256M -Dsolr.solr.home=/usr/share/tomcat7/alf_data/solrhome -Dcom.sun.management.jmxremote=true -Djava.rmi.server.hostname=10.0.0.21",
                    "user": "tomcat7"
                }
            },
            "run_list": [
                "apt::default",
                "alfresco::3rdparty",
                "tomcat::default",
                "alfresco::repo_config",
                "artifact-deployer::default"
            ]
        }
    ]
}