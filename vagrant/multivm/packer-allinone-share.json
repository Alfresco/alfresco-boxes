{
    "provisioners": [
        {
            "json": {
                "alfresco": {
                    "maven": {
                        "repo_type": "public"
                    },
                    "url": {
                      "repo":{
                          "host": "192.168.0.21"
                      }
                    }
                },
                "artifacts": {
                    "share": {
                        "enabled": true
                    }
                },
                "hostname": "alfresco-share",
                "ip": "192.168.0.31",
                "java": {
                    "default": true,
                    "install_flavor": "oracle",
                    "jdk_version": "7",
                    "oracle": {
                        "accept_oracle_download_terms": true
                    }
                },
                "maven": {
                    "repos": {
                        "maoo-public-cloudbees": {
                            "url": "https://repository-maoo.forge.cloudbees.com/release"
                        }
                    }
                },
                "tomcat": {
                    "base_version": 7,
                    "shared": "/var/lib/tomcat7/shared",
                    "group": "tomcat7",
                    "java_options": "-Xmx1500M -XX:MaxPermSize=256M -Dsolr.solr.home=/var/lib/tomcat7/alf_data/solrhome",
                    "user": "tomcat7"
                }
            },
            "run_list": [
                "apt::default",
                "tomcat::default",
                "alfresco::share_config",
                "artifact-deployer::default"
            ]
        }
    ]
}
