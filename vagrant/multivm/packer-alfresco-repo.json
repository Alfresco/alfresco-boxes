{
    "provisioners": [
        {
            "json": {
                "lb": {
                    "balancers": {
                        "alfresco": [{
                            "ipaddress": "10.0.0.21",
                            "route": "route21"
                        },
                        {
                            "ipaddress": "10.0.0.22",
                            "route": "route22"
                        }],
                        "share": [{
                            "ipaddress": "10.0.0.31",
                            "route": "route31"
                        },
                        {
                            "ipaddress": "10.0.0.32",
                            "route": "route32"
                        }]
                    }
                },
                "alfresco": {
                    "root_dir": "/alfresco/alf_data_shared",
                    "search": "solr",
                    "maven": {
                        "repo_type": "public"
                    },
                    "solr": {
                        "solr_secureComms": "none"
                    },
                    "db": {
                        "host": "10.0.0.11"
                    },
                    "url": {
                      "solr":{
                          "host": "10.0.0.41"
                      },
                      "share":{
                          "host": "10.0.0.31"
                      }  
                    }
                },
                "artifacts": {
                    "alfresco": {
                        "enabled": true,
                        "artifactId": "alfresco-nossl",
                        "groupId": "it.session.alfresco",
                        "version": "4.2.f"
                    },
                    "mysqlconnector": {
                        "enabled": true
                    }
                },
                "hostname": "alfresco-repo",
                "ip": "10.0.0.21",
                "memory":2048,
                "java": {
                    "default": true,
                    "install_flavor": "oracle",
                    "jdk_version": "7",
                    "oracle": {
                        "accept_oracle_download_terms": true
                    }
                },
                "maven": {
                    "repos": {
                        "maoo-public-cloudbees": {
                            "url": "https://repository-maoo.forge.cloudbees.com/release"
                        }
                    }
                },
                "tomcat": {
                    "base_version": 7,
                    "shared": "/var/lib/tomcat7/shared",
                    "group": "tomcat7",
                    "java_options": "-Xmx1500M -XX:MaxPermSize=256M -Dsolr.solr.home=/var/lib/tomcat7/alf_data/solrhome",
                    "user": "tomcat7"
                }
            },
            "run_list": [
                "apt::default",
                "alfresco::3rdparty",
                "tomcat::default",
                "alfresco::repo_config",
                "artifact-deployer::default"
            ]
        }
    ]
}