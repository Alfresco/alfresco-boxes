{
    "builders": [
        {
            "type": "docker",
            "image": "maoo/alf-precise-base",
            "export_path": "precise-alf42f.tar"
        }
    ],
    "provisioners": [
        {
            "cookbook_paths": [
                "../../common/vendor-cookbooks"
            ],
            "data_bags_path": "data_bags",
            "json": {
                "alfresco": {
                    "db" : {
                        "root_user":"admin",
                        "server_root_password":"alfresco",
                        "repo_hosts":["172.17.0.3"]
                    },
                    "version":"4.2.f",
                    "properties": {
                        "db.username":"admin",
                        "db.host":"172.17.0.2",
                        "hostname.private":"172.17.0.3"
                    }
                },
                "artifacts": {
                    "alfresco": {
                        "enabled": true
                    },
                    "keystore": {
                        "enabled": true
                    },
                    "alfresco-mmt": {
                        "enabled": true
                    },
                    "alfresco-spp": {
                        "enabled": true
                    },
                    "mysqlconnector": {
                        "enabled": true
                    },
                    "share": {
                        "enabled": true
                    },
                    "solr": {
                        "enabled": true
                    },
                    "solrhome": {
                        "enabled": true
                    }
                },
                "hostname": "precise-alf42f",
                "ip": "172.17.0.3",
                "java": {
                    "default": true,
                    "accept_license_agreement": true,
                    "install_flavor": "oracle",
                    "jdk_version": "7",
                    "oracle": {
                        "accept_oracle_download_terms": true
                    }
                },
                "tomcat": {
                    "start_service": false,
                    "files_cookbook": "alfresco",
                    "base_version": 7,
                    "deploy_manager_apps": false,
                    "java_options": "-Xmx1500M -XX:MaxPermSize=256M -Djava.rmi.server.hostname=172.17.0.3 -Dsolr.solr.home=/var/lib/tomcat7/alf_data/solrhome -Dcom.sun.management.jmxremote=true -Dsun.security.ssl.allowUnsafeRenegotiation=true"
                }
            },
            "run_list": [
                "apt::default",
                "iptables::default",
                "alfresco::mysql_createdb",
                "alfresco::3rdparty",
                "tomcat::default",
                "tomcat::users",
                "alfresco::repo_config",
                "alfresco::share_config",
                "alfresco::solr_config",
                "artifact-deployer::default",
                "alfresco::apply_amps"
            ],
            "prevent_sudo": false,
            "skip_install": false,
            "type": "chef-solo"
        }
    ]
}
