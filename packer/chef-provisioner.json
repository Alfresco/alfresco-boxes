{
  "type": "chef-solo",
  "execute_command" : "cd /tmp/packer-chef-solo && ln -s cookbooks-0 cookbooks && {{if .Sudo}}sudo {{end}}chef-client --no-color -z -j {{.JsonPath}}",
  "install_command": "bash -c 'curl -L https://www.opscode.com/chef/install.sh| bash -s -- -v {{user `chef_version`}}'",
  "prevent_sudo": true,
  "skip_install": false,
  "data_bags_path" : "{{user `data_bags_path`}}",
  "cookbook_paths": ["../cookbooks"],
  "run_list": ["{{user `run_list_item`}}"]
}
