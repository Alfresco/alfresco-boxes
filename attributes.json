{
    "hostname" : "alfresco-allinone",
    "ip" : "192.168.0.34",
    "run_list" : [
        "recipe[apt::default]",
        "recipe[alfresco::3rdparty]",
        "recipe[alfresco::mysql_server]",
        "recipe[alfresco::mysql_createdb]",
        /* @TODO - alfresco::tomcat doesn't work yet due to unresolved chef/rewind lib */
        "recipe[tomcat::default]",
        "recipe[alfresco::repo_config]",
        "recipe[alfresco::share_config]",
        "recipe[artifact-deployer::default]",
        "recipe[alfresco::solr_config]"
    ],
    "tomcat" : {
      "base_version" : 7,
      "user" : "tomcat7",
      "group" : "tomcat7",
      "java_options" : "-Xmx1500M -XX:MaxPermSize=256M -Dsolr.solr.home=/var/lib/tomcat7/alf_data/solrhome"
    },
    "alfresco" : {
        "maven" : {
            "repo_type" : "public",
            "username" : "alfresco",
            "password" : "alfresco"
        },
        "solr" : {
            "alfresco_secureComms" : "none",
            "solr_secureComms" : "none"
        }
    },
    "maven" : {
        "repos" : {
            "maoo-public-cloudbees" : {
                "url" : "https://repository-maoo.forge.cloudbees.com/release"
            }
        }
    },
    "artifacts" : {
        "alfresco" : {
            "groupId" : "it.session.alfresco",
            "artifactId" : "alfresco-nossl",
            "version" : "4.2.f"
        }
    },
    "java" : {
        "default" : true,
        "jdk_version" : "7",
        "install_flavor" : "oracle",
        "oracle" : {
            "accept_oracle_download_terms" : true
        }
    },
    "vagrant" : {
        "adapter": "en1: Wi-Fi (AirPort)"
    }
}